<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:gravity="center"
        android:id="@+id/title_bar">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_guitar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:id="@+id/preference_bar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_preference"
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_height="16dp"
            android:text="What kind of songs do you want to listen more?"
            android:textAppearance="@style/subtitle" />

        <Button
            android:id="@+id/button_next2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:text="Next >" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progresbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/selection"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        >
        <CheckBox android:id="@+id/classical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Classical/Instrumental"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/baila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Baila"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/cultural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Cultural songs (christams songs,vesak BathiGee,Avrudu songs etc)"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Rock"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Pop"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/hiphop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Hiphop"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/rap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Rap"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/symphony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Symphony"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/alternative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/genres"
            android:padding="12dp"
            android:text="Alternative"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

</LinearLayout>